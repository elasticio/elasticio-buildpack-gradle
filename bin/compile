#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

# fail fast
set -e

BP_DIR=$(cd $(dirname $0)/..; pwd) # absolute path
BIN_DIR=$BP_DIR/bin
OPT_DIR=$BP_DIR/opt
LIB_DIR=$BP_DIR/lib

. $LIB_DIR/common.sh

# parse args
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

echo -n "-----> Build folder ${BUILD_DIR}... "

GRADLE_TASK="elastic"

export_env_dir $ENV_DIR


if [ ! -d $CACHE_DIR ] ; then
  mkdir $CACHE_DIR
fi

export GRADLE_USER_HOME=$CACHE_DIR/.gradle

if [ ! -f $BUILD_DIR/gradlew ] ; then
  echo "-----> Installing Gradle Wrapper..."
  echo "       WARNING: Your application does not have it's own gradlew file."
  echo "       We'll install one for you, but this is a deprecated feature and"
  echo "       in the future may not be supported."
  cp -rn ${OPT_DIR}/wrapper/* ${BUILD_DIR}
fi
BUILDCMD="./gradlew"
chmod +x ${BUILD_DIR}/gradlew

BUILDCMD="$BUILDCMD $GRADLE_TASK"

cd $BUILD_DIR

# build app
echo "-----> Building Gradle app..."
echo "       WARNING: The Gradle buildpack is currently in Beta."
echo "-----> executing $BUILDCMD"

$BUILDCMD 2>&1 | sed -u 's/^/       /'

if [ "${PIPESTATUS[*]}" != "0 0" ]; then
  echo " !     Failed to build app"
  exit 1
fi

echo "-----> Cloning sailor-jvm from GitHub"
git clone https://github.com/elasticio/sailor-jvm.git
cd sailor-jvm
echo "      Building sailor"
./gradlew clean build fatJar

echo "-----> Create sail.sh and serve.sh files"
cd ..
echo "java -cp ./build/classes/main:./lib/*:../sailor-jvm/build/libs/* io.elastic.sailor.Sailor" > sail.sh
echo "java -cp ./build/classes/main:./lib/*:../sailor-jvm/build/libs/* io.elastic.sailor.Service \${1} \${2} \${3}" > serve.sh

echo "-----> Success"
